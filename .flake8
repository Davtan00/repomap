[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv/*,
    .venv/**/*,
    venv/*,
    .env/*,
    env/*,
    .tox/*,
    *.egg,
    site-packages/*,
    .\.venv\*,
    .\.venv\**\*
per-file-ignores =
    __init__.py:F401
    tests/*:S101
ignore = E203, W503
extend-ignore = E203
max-complexity = 10
